<p id="notice"><%= notice %></p>

<h1>Snapshots</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Views</th>
      <th>Episode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @snapshots.each do |snapshot| %>
      <tr>
        <td><%= snapshot.date %></td>
        <td><%= snapshot.views %></td>
        <td><%= snapshot.episode.id %></td>
        <td><%= link_to 'Show', episode_snapshot_path(snapshot.episode, snapshot) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Snapshot', new_episode_snapshot_path %>
