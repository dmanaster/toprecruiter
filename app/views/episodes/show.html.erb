<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @episode.title %>
</p>

<p>
  <strong>Url:</strong>
  <%= @episode.url %>
</p>

<p>
  <strong>Published:</strong>
  <%= @episode.published %>
</p>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Views</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @episode.snapshots.each do |snapshot| %>
      <tr>
        <td><%= snapshot.date %></td>
        <td><%= snapshot.views %></td>
        <td><%= link_to 'Show', episode_snapshot_path(snapshot.episode, snapshot) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_episode_path(@episode) %> |
<%= link_to 'Back', episodes_path %>
